{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true, // This makes express work by allowing import express from 'express'
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
